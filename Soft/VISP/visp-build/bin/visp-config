relpath=`dirname $0`
relpath=`(cd $relpath/..; pwd)`

PREFIX=$relpath

CFLAGS=" -I$PREFIX/include -I/home/force/Programmation/ESIR2/Soft/VISP/visp/modules/core/include -I/home/force/Programmation/ESIR2/Soft/VISP/visp/modules/detection/include -I/home/force/Programmation/ESIR2/Soft/VISP/visp/modules/gui/include -I/home/force/Programmation/ESIR2/Soft/VISP/visp/modules/io/include -I/home/force/Programmation/ESIR2/Soft/VISP/visp/modules/tracker/klt/include -I/home/force/Programmation/ESIR2/Soft/VISP/visp/modules/tracker/me/include -I/home/force/Programmation/ESIR2/Soft/VISP/visp/modules/sensor/include -I/home/force/Programmation/ESIR2/Soft/VISP/visp/modules/ar/include -I/home/force/Programmation/ESIR2/Soft/VISP/visp/modules/tracker/blob/include -I/home/force/Programmation/ESIR2/Soft/VISP/visp/modules/robot/include -I/home/force/Programmation/ESIR2/Soft/VISP/visp/modules/visual_features/include -I/home/force/Programmation/ESIR2/Soft/VISP/visp/modules/vs/include -I/home/force/Programmation/ESIR2/Soft/VISP/visp/modules/vision/include -I/home/force/Programmation/ESIR2/Soft/VISP/visp/modules/tracker/mbt/include -I/home/force/Programmation/ESIR2/Soft/VISP/visp/modules/tracker/tt/include -I/home/force/Programmation/ESIR2/Soft/VISP/visp/modules/tracker/tt_mi/include -I/usr/include/opencv -I/usr/include"

LIBS=" $PREFIX/lib/libvisp_core.so $PREFIX/lib/libvisp_detection.so $PREFIX/lib/libvisp_gui.so $PREFIX/lib/libvisp_io.so $PREFIX/lib/libvisp_klt.so $PREFIX/lib/libvisp_me.so $PREFIX/lib/libvisp_sensor.so $PREFIX/lib/libvisp_ar.so $PREFIX/lib/libvisp_blob.so $PREFIX/lib/libvisp_robot.so $PREFIX/lib/libvisp_visual_features.so $PREFIX/lib/libvisp_vs.so $PREFIX/lib/libvisp_vision.so $PREFIX/lib/libvisp_mbt.so $PREFIX/lib/libvisp_tt.so $PREFIX/lib/libvisp_tt_mi.so /usr/lib/i386-linux-gnu/libopencv_videostab.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_video.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_ts.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_superres.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_stitching.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_photo.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_ocl.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_objdetect.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_ml.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_legacy.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_imgproc.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_highgui.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_gpu.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_flann.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_features2d.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_core.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_contrib.so.2.4.9 /usr/lib/i386-linux-gnu/libopencv_calib3d.so.2.4.9 /usr/lib/i386-linux-gnu/libpthread.so /usr/lib/i386-linux-gnu/libz.so /usr/lib/i386-linux-gnu/libSM.so /usr/lib/i386-linux-gnu/libICE.so /usr/lib/i386-linux-gnu/libX11.so /usr/lib/i386-linux-gnu/libXext.so /usr/lib/i386-linux-gnu/libjpeg.so /usr/lib/i386-linux-gnu/libpng.so /usr/lib/i386-linux-gnu/libdc1394.so"

VERSION="3.0.1"

NO_NEWLINE_CHARACTER=""
NO_NEWLINE_OPTION="-n"

usage()
{
    cat <<EOF

ViSP $VERSION (Visual Servoing Platform)
Copyright (C) 2005 - 2015 Inria. All rights reserved.

Usage: $0 [--prefix] [--cflags] [--libs] [--version] [--dumpversion]  [--help]

  --prefix      Show ViSP installation prefix.
  --cflags      Print pre-processor and compiler flags including
                third party includes we depend on.
  --libs        Print library linking information with ViSP
                including third party libraries we depend on.
  --version     Output ViSP information.
  --dumpversion Output ViSP version information.
  --help        Display this help and exit.

EOF
    exit $1
}

if ! test "$1"; then
    usage;
    exit 0;
fi;

for arg in $@; do
    case $arg in
	--prefix) echo $NO_NEWLINE_OPTION "$PREFIX$NO_NEWLINE_CHARACTER";;
	--cflags) echo $NO_NEWLINE_OPTION "$CFLAGS$NO_NEWLINE_CHARACTER";;
	--libs) echo $NO_NEWLINE_OPTION "$LIBS$NO_NEWLINE_CHARACTER";;
	--version) 
	    echo "ViSP $VERSION (Visual Servoing Platform)"
	    echo ""
	    echo "Copyright (C) 2005 - 2015 Inria. All rights reserved.";;
	--dumpversion) echo $NO_NEWLINE_OPTION "$VERSION$NO_NEWLINE_CHARACTER";;
        *) usage; exit 0 ;;
    esac;
done;
echo ""
